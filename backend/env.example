# 後端環境變數範例
# 複製此檔案為 .env 並填入實際值

# 伺服器設定
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# 資料庫設定
DATABASE_URL=postgresql://username:password@localhost:5432/shopline_backend
DB_MAX_CONNECTIONS=10
DB_SSL=false

# Redis 設定
REDIS_URL=redis://localhost:6379

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS 設定
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Shopline 設定
SHOPLINE_APP_KEY=your-shopline-app-key
SHOPLINE_APP_SECRET=your-shopline-app-secret
SHOPLINE_SHOP_HANDLE=your-shop-handle
SHOPLINE_BASE_URL=https://your-shop.myshopline.com
SHOPLINE_WEBHOOK_SECRET=your-webhook-secret

# 事件設定
EVENT_MAX_RETRIES=3
EVENT_RETRY_DELAY=1000
EVENT_BATCH_SIZE=100

# 監控設定
MONITORING_ENABLED=false
METRICS_PORT=9090
