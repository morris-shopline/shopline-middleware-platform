{
  "name": "shopline-middleware-platform",
  "version": "1.0.0",
  "description": "Shopline 中台系統 - 前後端分離架構，支援多平台整合",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:local": "node migration/migration-scripts/test-backend.js && node migration/migration-scripts/test-frontend.js",
    "deploy:frontend": "cd frontend && npm run build",
    "deploy:backend": "cd backend && npm run build",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/.next backend/dist",
    "docs:update": "node scripts/update-docs.js update",
    "docs:status": "node scripts/update-docs.js status"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "shopline",
    "middleware",
    "frontend",
    "backend",
    "typescript",
    "nextjs",
    "fastify",
    "event-driven",
    "multi-platform"
  ],
  "author": "morris-shopline",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/morris-shopline/shopline-middleware-platform.git"
  },
  "bugs": {
    "url": "https://github.com/morris-shopline/shopline-middleware-platform/issues"
  },
  "homepage": "https://github.com/morris-shopline/shopline-middleware-platform#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}